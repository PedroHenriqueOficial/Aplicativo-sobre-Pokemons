<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/magic_mint"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/pokeball"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        android:src="@drawable/bola"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/nome_pokemon"
        app:layout_constraintVertical_bias="0.80"
        />

    <EditText
        android:id="@+id/nome_pokemon"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:hint="@string/nome_do_pokemon"
        android:inputType="text"
        android:textColor="@color/black"
        android:textColorHint="@color/white"
        android:textStyle="bold"
        android:background="@color/persian_green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/button_buscar"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/buscar"
        android:textStyle="bold"
        android:backgroundTint="@color/persian_green"
        app:layout_constraintTop_toBottomOf="@id/nome_pokemon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cornerRadius="10dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>